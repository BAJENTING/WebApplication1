    <script>
        //Modal
        document.addEventListener("DOMContentLoaded", function () {
        // Open Video Modal
        document.getElementById("openVideo").addEventListener("click", function(event) {
            event.preventDefault();
            document.getElementById("videoModal").style.display = "flex";
        });

         // Close Video Modal
        document.getElementById("closeModal").addEventListener("click", function() {
            let video = document.getElementById("homeVideo");
            video.pause();
            document.getElementById("videoModal").style.display = "none";
        });

        // Close modal when clicking outside
        document.addEventListener("click", function(event) {
            let modal = document.getElementById("videoModal");
            if (event.target === modal) {
                let video = document.getElementById("homeVideo");
                video.pause();
                modal.style.display = "none";
                }
            });
        });


        // Toggle Profile Dropdown
        function toggleDropdown() {
            document.getElementById("profileDropdown").classList.toggle("show");
        }

        // Close dropdown when clicking outside
        window.addEventListener("click", function (event) {
            let dropdown = document.getElementById("profileDropdown");
            let profileIcon = document.querySelector(".profile-icon");

            if (dropdown && dropdown.classList.contains("show") && !event.target.closest(".profile-menu")) {
                dropdown.classList.remove("show");
            }
        });


        // Toggle Menu - Side bar
        let menuList = document.getElementById("menuList");

        if (menuList) {
            menuList.style.maxHeight = "0px";

            function toggleMenu() {
                menuList.style.maxHeight = (menuList.style.maxHeight === "0px") ? "300px" : "0px";
            }
        }

        // Carousel (Slideshow) Logic
        let currentIndex = 0;
        const slidesToShow = 3;
        const slideWidth = 300;
        const slideTrack = document.querySelector('.slide-track');
        const totalSlides = document.querySelectorAll('.slide').length;

        function changeSlide(direction) {
            currentIndex += direction;

            // Ensure smooth looping behavior
            if (currentIndex < 0) {
                currentIndex = totalSlides - slidesToShow;
            } else if (currentIndex >= totalSlides - slidesToShow) {
                currentIndex = 0;
            }

            slideTrack.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
        }
    </script>
