@page
@model WebApplication1.Pages.EventModel
@{
    ViewData["Title"] = "Event";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Balay na Homes - Event Calendar</title>
    <link rel="stylesheet" href="~/css/event.css">
</head>
<body>
    <div class="header">
        <h1>Balay na Homes</h1>
        <div class="nav">
            <a href="#">About Us</a>
            <a href="#">Contact</a>
            <a href="#">Privacy Policy</a>
            <a href="#">Our Team</a>
            <a href="#">FAQ</a>
        </div>
    </div>

    <div class="container">
        <div class="page-title">
            <h2>Event Calendar</h2>
        </div>

        <div class="upcoming-events">
            <h2>Upcoming Events</h2>
            <div id="upcoming-events-container">
                <!-- Upcoming events will be dynamically populated here -->
            </div>
        </div>

        <div class="calendar-header">
            <div class="month-nav">
                <button id="prev-month">←</button>
                <h3 id="current-month">Loading...</h3>
                <button id="next-month">→</button>
            </div>
            <div class="view-options">
                <button class="active" id="view-month">Month</button>
                <button id="view-week">Week</button>
                <button id="view-day">Day</button>
                <button id="view-list">List</button>
            </div>

        </div>

        <div class="calendar-grid" id="calendar-grid">
            <!-- Calendar will be dynamically populated here -->
        </div>
    </div>

    <script src="~/js/Event.js"></script>
</body>
</html>
